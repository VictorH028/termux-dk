#!/bin/bash

STYLE="default"
rofi_command="rofi -theme $STYLE/network.rasi"

## Obtener IP usando el comando LOCALHOST
PIP=$( ifconfig 2>/dev/null|grep -oE '([0-9]{1,3}\.){3}[0-9]{1,3}'|grep -v 255|grep -v 127|tail -n 1 2>/dev/null || echo "NA")

## Mostrar IP en Rofi
echo -e "IP : $PIP" | $rofi_command -dmenu -p "Your IP"

